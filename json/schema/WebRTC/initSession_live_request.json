{
    "$id": "initSession_live_request",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Complete \"live\" initSession client request",
    "description": "This message is sent from client to the signaling server to request a new WebRTC session.\nThe requested media properties of the session are passed in the `data` field using a *sessionRequest* message of the *P2P-protocol*.",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "initSession",
            "description": "Specifies an initSession request"
        },
        "targetId": {
            "type": "string",
            "examples": [
                "mycamera"
            ],
            "description": "The target id to which the client want to establish the WebRTC session"
        },
        "orgId": {
            "type": "string",
            "examples": [
                "myorg"
            ],
            "description": "The id of the organization that the device belongs to."
        },
        "accessToken": {
            "type": "string",
            "description": "Token from `auth.axis.com` for the logged in user.",
            "examples": [
                "78767f38-c728-45f7-96d6-d28a95bdd71f"
            ]
        },
        "correlationId": {
            "type": "string",
            "description": "Used to identify the message. Echoed back in the server response."
        },
        "data": {
            "$ref": "#/definitions/P2P"
        }
    },
    "required": [
        "type",
        "targetId",
        "orgId",
        "accessToken",
        "data"
    ],
    "definitions": {
        "P2P": {
            "$id": "initSession_request_live",
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "title": "initSession request for live media",
            "description": "This message is sent from client to device to request a new WebRTC session.\nMedia properties of the session are determined by the `profile`.",
            "type": "object",
            "properties": {
                "apiVersion": {
                    "type": "string",
                    "const": "1.0",
                    "pattern": "^[0-9]+\\.[0-9]+$",
                    "description": "The API version that should be used in the request."
                },
                "type": {
                    "type": "string",
                    "examples": [
                        "request"
                    ],
                    "description": "Specifies that this message is a request"
                },
                "sessionId": {
                    "type": "string",
                    "examples": [
                        "948dd272-f56b-416f-b349-fa1e88578b7c"
                    ],
                    "description": "An identifier chosen by the client that should be used for all subsequent messages belonging to this session."
                },
                "method": {
                    "type": "string",
                    "const": "initSession",
                    "description": "Specifies an initSession request."
                },
                "context": {
                    "type": "string",
                    "examples": [
                        "ee4b07f4-1890-41db-b368-66b246c54fb3"
                    ],
                    "description": "An optional identifier chosen by the client that can be used to correlate the response from the device with the request."
                },
                "params": {
                    "type": "object",
                    "description": "The requested session configuration.",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "live",
                            "description": "Specifies a live session."
                        },
                        "profile": {
                            "type": "string",
                            "examples": [
                                "my_profile"
                            ],
                            "description": "The media profile to use for streaming."
                        }
                    },
                    "required": [
                        "type"
                    ]
                }
            },
            "required": [
                "apiVersion",
                "sessionId",
                "method",
                "params"
            ]
        }
    }
}